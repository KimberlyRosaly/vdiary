<%# ====================================================================HEAD %>
  <head>
<%# ============================================================for Bulma======== %>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- ↑ BULMA REQUIREMENT : this line makes the site RESPONSIVE -->    
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.1/css/bulma.min.css">
